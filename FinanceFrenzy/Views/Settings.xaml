<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinanceFrenzy.Views.Settings"
             Title="Settings">
    <VerticalStackLayout Spacing="25" Padding="30" VerticalOptions="Center">
        <Label Text="Settings" HorizontalOptions="Center" FontSize="24" FontAttributes="Bold"/>

        <!-- Theme Toggle -->
        <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="10">
            <Label Text="Dark Mode" VerticalOptions="Center"/>
            <Switch x:Name="DarkModeSwitch" Toggled="DarkModeSwitch_Toggled"/>
        </StackLayout>

        <Button 
            Text="Back to Dashboard" 
            HorizontalOptions="Center"
            x:Name="btnGoBack"
            Clicked="btnGoBack_Clicked"/>
    </VerticalStackLayout>

</ContentPage>