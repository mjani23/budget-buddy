<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinanceFrenzy.Views.DashboardPage"
             Title="Dashboard">

    <Grid Padding="10"
          RowDefinitions="Auto, Auto, Auto, Auto"
          ColumnDefinitions="*">

        <!-- Income Display -->
        <StackLayout Grid.Row="0" Spacing="5" Padding="0, 0, 0, 10">
            <Label Text="Current Income:" FontSize="22" FontAttributes="Bold"/>
            <Label x:Name="IncomeLabel" FontSize="18"  />
        </StackLayout>

        <!-- Take Home Pay Display -->
        <StackLayout Grid.Row="1" Spacing="5" Padding="0, 0, 0, 10">
            <Label Text="Take-Home Pay:" FontSize="22" FontAttributes="Bold"/>
            <Label x:Name="TakeHomeLabel" FontSize="18" />
        </StackLayout>

        <!-- Expenses Display -->
        <StackLayout Grid.Row="2" Spacing="5" Padding="0, 0, 0, 10">
            <Label Text="Total Monthly Expenses:" FontSize="22" FontAttributes="Bold"/>
            <Label x:Name="ExpensesLabel" FontSize="18" />
        </StackLayout>

        <!-- Remaining Savings Display -->
        <StackLayout Grid.Row="3" Spacing="5" Padding="0, 0, 0, 10">
            <Label Text="Remaining Savings Goal:" FontSize="22" FontAttributes="Bold"/>
            <Label x:Name="SavingsLabel" FontSize="18"/>
        </StackLayout>

    </Grid>
</ContentPage>